{
  "name": "zenml",
  "publisher": "zenml-io",
  "displayName": "ZenML",
  "description": "",
  "version": "0.0.1",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "zenml.connectServer",
        "title": "Connect to Server"
      },
      {
        "command": "zenml.disconnectServer",
        "title": "Disconnect from Server"
      },
      {
        "command": "zenml.updateActiveStack",
        "title": "Refresh Active Stack"
      },
      {
        "command": "zenml.updateServerStatus",
        "title": "Refresh Server Status"
      },
      {
        "command": "zenml.refreshStackView",
        "title": "Refresh Stack View"
      },
      {
        "command": "zenml.refreshServerStatus",
        "title": "Refresh Server Status"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zenml",
          "title": "ZenML",
          "icon": "resources/logo.png"
        }
      ]
    },
    "views": {
      "zenml": [
        {
          "id": "zenmlServerView",
          "name": "Server",
          "icon": "$(vm)"
        },
        {
          "id": "zenmlStackView",
          "name": "Stacks",
          "icon": "$(layers)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "when": "view == zenmlServerView",
          "command": "zenml.connectServer",
          "group": "navigation"
        },
        {
          "when": "view == zenmlServerView",
          "command": "zenml.disconnectServer",
          "group": "navigation"
        },
        {
          "when": "view == zenmlStackView",
          "command": "zenml.refreshStackView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "when": "view == zenmlServerView",
          "command": "zenml.refreshServerStatus",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "ZenML",
      "properties": {
        "zenml.venvPath": {
          "type": "string",
          "default": "",
          "description": "Path to the virtual environment where ZenML is installed. Leave empty if installed globally."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.86.0",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "sinon": "^17.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  }
}
